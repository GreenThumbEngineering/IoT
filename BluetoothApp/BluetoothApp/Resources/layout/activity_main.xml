<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1">
        
        <TextView
            android:text="SSID:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_action_button_min_height_material"
            android:editable="false"
            android:padding="5.0dp"
            android:layout_centerInParent="true"
            android:labelFor="@+id/textInputEditText1"/>
    
        
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5.0dp"
            android:id="@+id/ssid" />
        
        <TextView
            android:text="Password:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_action_button_min_height_material"
            android:editable="false"
            android:padding="5.0dp"
            android:layout_centerInParent="true"
            android:labelFor="@+id/textInputEditText2"
            android:id="@+id/textView3" />    
         
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5.0dp"
            android:id="@+id/password" />
        
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="183.5dp"
            android:id="@+id/DeviceList"
            android:layout_marginLeft="0.0dp"
            android:clickable="true"
            android:focusable="true"
            android:choiceMode="singleChoice"
            android:isScrollContainer="true"
            android:listSelector="#7D7D7D"/>
       
        <Button
            android:id="@+id/refresh"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Refresh"
            android:drawableRight="@android:drawable/ic_popup_sync"
            android:textSize="24sp"/>
            
        
       
        <Button
            android:id="@+id/send"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Send credentials"
            android:drawableRight="@android:drawable/ic_menu_send"
            android:textSize="24sp"/>
        
            
        

    </LinearLayout>

</RelativeLayout>